<UserControl x:Class="SimpleControlLibrary.Validation.ValidationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleControlLibrary.Validation"
             xmlns:converter="clr-namespace:SimpleControlLibrary.SelectControl.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Style>
            <Style>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding HasError}" Value="True">
                        <Setter Property="Grid.Visibility" Value="Visible"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding HasError}" Value="False">
                        <Setter Property="Grid.Visibility" Value="Hidden"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <TextBlock 
            TextWrapping="Wrap"
            HorizontalAlignment="Stretch"
            FontSize="16"
            Background="BurlyWood"
            Foreground="Red"
            Text="{Binding ValidationText}"/>
    </Grid>
</UserControl>
